<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/background_light"
    android:layout_marginTop="80dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/exerciseNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Exercise Name"
        android:textColorHint="#607596"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/setsEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Sets"
        android:inputType="number"
        android:textColorHint="#607596"
        android:layout_marginTop="7dp"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/repsEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Reps"
        android:inputType="number"
        android:textColorHint="#607596"
        android:layout_marginTop="7dp"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/weightEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Weight"
        android:inputType="numberDecimal"
        android:textColorHint="#607596"
        android:layout_marginTop="7dp"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/restSecsEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Rest time(sec)"
        android:inputType="number"
        android:textColorHint="#607596"
        android:layout_marginTop="7dp"
        android:minHeight="48dp" />

    <Button
        android:layout_marginTop="20dp"
        android:background="#24467E"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Insert Exercise"
        android:onClick="insetExerciseData"
        android:id="@+id/insertExerciseButton"/>

</LinearLayout>
