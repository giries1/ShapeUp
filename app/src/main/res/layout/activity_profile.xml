<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Profile">



    <TextView
        android:id="@+id/textView"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:text="Profile"
        android:layout_margin="20dp"
        android:textSize="30dp"
        />
    <Button
        android:id="@+id/Logout"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:layout_marginLeft="300dp"
        android:text="Logout"
        android:onClick="showAlertDialog"
        />



    <Button

        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:layout_marginTop="310dp"
        android:layout_marginLeft="7dp"
        android:text="Coaches"
        android:drawableLeft="@drawable/baseline_people_24"
        />

    <Button
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="7dp"
        android:text="Notifications"
        android:drawableLeft="@drawable/baseline_notifications_active_24"
        />

    <Button
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:textSize="25dp"
        android:layout_marginLeft="7dp"
        android:text="Feedback"
        android:drawableLeft="@drawable/feedbackicon"
        />


    <Button
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="Settings"
        android:layout_marginLeft="7dp"
        android:textSize="25dp"
        android:drawableLeft="@drawable/baseline_app_settings_alt_24"
        />




</LinearLayout>