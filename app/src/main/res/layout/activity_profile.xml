<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            android:text="Profile"
            android:textColor="@color/black"
            android:textSize="30dp" />


        <Button
            android:id="@+id/Logout"
            android:layout_width="105dp"
            android:layout_height="58dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="15dp"
            android:text="Logout"
            android:textColor="#D91567"
            android:textSize="17dp"
            android:background="@color/white"
            android:onClick="showAlertDialogLogout"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="199dp"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="219dp"
            android:layout_height="158dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:scaleType="centerInside"
            android:src="@drawable/profileimageicon"
            android:contentDescription="a"
            />

        <Button
            android:id="@+id/button"
            android:layout_width="117dp"
            android:layout_height="54dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="79dp"
            android:text="My Stats"
            android:background="@color/white"
            android:textColor="#040404"
            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="99dp"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button2"
            android:layout_width="115dp"
            android:layout_height="79dp"
            android:background="@color/white"
            android:text="Weight"
            android:textColor="#D81B60"
            android:textSize="15sp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="115dp"
            android:layout_height="79dp"
            android:layout_marginLeft="5dp"
            android:background="@color/white"
            android:text="Body Fat"
            android:textColor="#D81B60"
            android:textSize="15sp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="115dp"
            android:layout_height="79dp"
            android:layout_marginLeft="5dp"
            android:background="@color/white"
            android:text="BMI"
            android:textColor="#D81B60"
            android:textSize="15sp" />


    </LinearLayout>


    <Button

        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="7dp"
        android:text="Coaches"
        android:drawableLeft="@drawable/baseline_people_24"
        android:textColor="@color/black"
        android:background="@color/white"
        />

    <Button
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="7dp"
        android:text="Notifications"
        android:drawableLeft="@drawable/baseline_notifications_active_24"
        android:textColor="@color/black"
        android:background="@color/white"
        />

    <Button
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:textSize="25dp"
        android:layout_marginLeft="7dp"
        android:text="Feedback"
        android:drawableLeft="@drawable/feedbackicon"
        android:textColor="@color/black"
        android:background="@color/white"
        android:onClick="showAlertDialogFeedBack"
        />


    <Button
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="Settings"
        android:layout_marginLeft="7dp"
        android:textSize="25dp"
        android:drawableLeft="@drawable/baseline_app_settings_alt_24"
        android:textColor="@color/black"
        android:background="@color/white"
        />




</LinearLayout>